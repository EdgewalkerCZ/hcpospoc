<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">
    
    <grid name="template-context-line-grid" title="Template Context Lines" model="com.axelor.apps.base.db.TemplateContextLine">
        <field name="name"/>
        <field name="key"/>
    </grid>
    
    <form name="template-context-line-form" title="Template Context Line" model="com.axelor.apps.base.db.TemplateContextLine">
    	<panel name="main">
	        <field name="name"/>
	        <field name="key"/>
	        <field name="query" colSpan="12" widget="CodeEditor" x-syntax="sql"/>
        </panel>
    </form>
    
</object-views>
