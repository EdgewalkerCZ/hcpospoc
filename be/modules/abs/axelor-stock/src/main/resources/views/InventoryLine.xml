<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">
    
    <grid name="inventory-line-grid" title="Inventory lines" model="com.axelor.apps.stock.db.InventoryLine" editable="true" orderBy="product.code">
        <field name="product" onChange="action-inventory-line-attrs-tracking-number" grid-view="product-grid" form-view="product-form"/>
        <field name="currentQty" readonly="true" aggregate="sum" width="120"/>
        <field name="realQty" aggregate="sum" width="120"/>
        <field name="description"/>
        <field name="rack" width="150"/>
        <field name="trackingNumber" canNew="true" width="150" domain="self.product = :product"/>
    </grid>
    
    <form name="inventory-line-form" title="Inventory line" model="com.axelor.apps.stock.db.InventoryLine"
    	onLoad="action-inventory-line-attrs-tracking-number">
    	<panel name="main">
	        <field name="product" canEdit="false" onChange="action-inventory-line-attrs-tracking-number,action-inventory-line-method-on-change-product"
	        	domain="self.expense = false and self.productTypeSelect = 'storable'" form-view="product-form" grid-view="product-grid"/>
	        <field name="currentQty" readonly="true"/>
	        <field name="realQty"/>
	        <field name="description"/>
            <field name="rack"/>
		    <field name="trackingNumber" canNew="true" domain="self.product = :product"/>
	    </panel>
    </form>
    
    <action-attrs name="action-inventory-line-attrs-tracking-number">
    	<attribute name="required" for="trackingNumber" expr="eval: product?.trackingNumberConfiguration?.isPurchaseTrackingManaged || product?.trackingNumberConfiguration?.isProductionTrackingManaged || product?.trackingNumberConfiguration?.isSaleTrackingManaged"/>
		<attribute name="readonly" for="trackingNumber" expr="eval: !product?.trackingNumberConfiguration?.isPurchaseTrackingManaged &amp;&amp; !product?.trackingNumberConfiguration?.isProductionTrackingManaged &amp;&amp; !product?.trackingNumberConfiguration?.isSaleTrackingManaged || __parent__?.statusSelect >= 5"/>
    </action-attrs>
	
	<action-method name="action-inventory-line-method-on-change-product">
		<call class="com.axelor.apps.stock.web.InventoryLineController" method="updateInventoryLine"/>
	</action-method>
    
</object-views>
