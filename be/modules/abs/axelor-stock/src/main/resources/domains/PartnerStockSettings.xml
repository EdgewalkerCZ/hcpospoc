<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.0.xsd">

    <module name="stock" package="com.axelor.apps.stock.db"/>

    <entity name="PartnerStockSettings" cachable="true">
        <boolean name="stockMoveAutomaticMail"
                 title="Send email on stock move realization" default="false"/>
        <many-to-one name="stockMoveMessageTemplate" title="Message template"
                     ref="com.axelor.apps.message.db.Template"/>
        <many-to-one name="partner" ref="com.axelor.apps.base.db.Partner"
                     required="true"/>
        <many-to-one name="company" ref="com.axelor.apps.base.db.Company"
                     required="true"/>
        <many-to-one name="defaultStockLocation" title="Default stock location"
                     ref="com.axelor.apps.stock.db.StockLocation"/>
    </entity>

</domain-models>