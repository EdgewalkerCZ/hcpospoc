<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">
    
    <grid name="move-template-line-grid" title="Move template line" model="com.axelor.apps.account.db.MoveTemplateLine">
        <field name="moveTemplate" form-view="move-template-form" grid-view="move-template-grid"/>
        <field name="name" />
        <field name="debitCreditSelect" />
        <field name="product" form-view="product-form" grid-view="product-grid"/>
        <field name="account" form-view="account-form" grid-view="account-grid"/>
        <field name="percentage"/>
    </grid>
    
   	<grid name="move-template-line-move-template-grid"  title="Move template line" model="com.axelor.apps.account.db.MoveTemplateLine">
		<field name="name"/>
		<field name="debitCreditSelect"/>
		<field name="product" grid-view="product-grid" form-view="product-form"/>
		<field name="account" grid-view="account-grid" form-view="account-form"/>
		<field name="percentage"/>
    </grid>
    
    <form name="move-template-line-form" title="Move template line" model="com.axelor.apps.account.db.MoveTemplateLine">
        <panel name="main" readonlyIf="isValid">
	        <field name="moveTemplate" onChange="action-move-template-line-get-account" required="true" form-view="move-template-form" grid-view="move-template-grid"/>
        </panel>
        <panel-include view="move-template-line-move-template-form"/>
    </form>
    
	<form name="move-template-line-move-template-form" title="Move template line" model="com.axelor.apps.account.db.MoveTemplateLine">
		<panel name="main" readonlyIf="isValid">
			<field name="name"/>
			<field name="debitCreditSelect" onChange="action-move-template-line-get-account"/>
			<field name="product" canEdit="false" onChange="action-move-template-line-get-account" form-view="product-form" grid-view="product-grid"/>
			<field name="account" canEdit="false" onSelect="action-move-template-line-set-account-domain" grid-view="account-grid" form-view="account-form"/>
			<field name="percentage" placeholder="80" onChange="action-template-move-line-check-percent"/>
			<field name="hasPartnerToDebit" showIf="debitCreditSelect == 'D'"/>
			<field name="hasPartnerToCredit" showIf="debitCreditSelect == 'C'"/>
			<field name="isValid" readonly="true"/>
		</panel>
  	</form>
    
    <action-record name="action-move-template-line-get-account" model="com.axelor.apps.account.db.MoveTemplateLine">
    	<field name="account" expr="call:com.axelor.apps.account.service.AccountManagementServiceAccountImpl:getProductAccount(product,moveTemplate.company,true)" if="product != null &amp;&amp; moveTemplate?.company != null &amp;&amp; debitCreditSelect == 'D' "/>
    	<field name="account" expr="call:com.axelor.apps.account.service.AccountManagementServiceAccountImpl:getProductAccount(product,__repo__(Company).find(_parent.company.id),true)" if="product != null &amp;&amp; _parent?.company != null &amp;&amp; debitCreditSelect == 'D' "/>
    	<field name="account" expr="call:com.axelor.apps.account.service.AccountManagementServiceAccountImpl:getProductAccount(product,moveTemplate.company,false)" if="product != null &amp;&amp; moveTemplate?.company != null &amp;&amp; debitCreditSelect == 'C' "/>
    	<field name="account" expr="call:com.axelor.apps.account.service.AccountManagementServiceAccountImpl:getProductAccount(product,__repo__(Company).find(_parent.company.id),false)" if="product != null &amp;&amp; _parent?.company != null &amp;&amp; debitCreditSelect == 'C' "/>
    </action-record>
    
    <action-validate name="action-template-move-line-check-percent">
    	<error message="Please input values between 1 to 100" action="action-template-move-line-set-percent" if="percentage &lt; 0 || percentage &gt; 100"/>
    </action-validate>
    
    <action-record name="action-template-move-line-set-percent" model="com.axelor.apps.account.db.MoveTemplateLine">
    	<field name="percentage" expr="eval: 0" />
    </action-record>
    
    
</object-views>