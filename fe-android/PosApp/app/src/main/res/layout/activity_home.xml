<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#da1a32"
        android:padding="15dp">

        <TextView
            android:id="@+id/txtLogo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="19.5sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#666666"
            android:text="Logo"
            android:background="@drawable/background_circle_light_grey"
            android:gravity="center"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/txtLogo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Alpha Store Limited"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last login was at 14-07"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif"
                android:layout_marginTop="3dp"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f5f5f5">

        <android.support.v7.widget.CardView
            android:id="@+id/cardPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:id="@+id/lytPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/imgPayment"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/background_circle_green"
                    android:src="@drawable/ic_furniture_loan"
                    android:layout_centerVertical="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/imgPayment"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment"
                        android:textSize="24sp"
                        android:textColor="#333333"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorum ipsume donet lo"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="3dp"/>

                </LinearLayout>


            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"

            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:id="@+id/lytHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/imgHistory"
                    android:layout_width="44dp"
                    android:layout_height="44dp"

                    android:background="@drawable/background_circle_green"
                    android:src="@drawable/ic_furniture_loan"
                    android:layout_centerVertical="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/imgHistory"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="History"
                        android:textSize="24sp"
                        android:textColor="#333333"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorum ipsume donet lo"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="3dp"/>

                </LinearLayout>


            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"

            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:id="@+id/lytStock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/imgStock"
                    android:layout_width="44dp"
                    android:layout_height="44dp"

                    android:src="@drawable/ic_stock"
                    android:layout_centerVertical="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/imgStock"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stock"
                        android:textSize="24sp"
                        android:textColor="#333333"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorum ipsume donet lo"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="3dp"/>

                </LinearLayout>


            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>





</LinearLayout>
