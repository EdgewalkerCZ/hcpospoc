<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/dp10"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/cardcrmaddcustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:id="@+id/lytPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="15dp">

            <RelativeLayout
                android:layout_width="44dp"
                android:id="@+id/add_customerbg"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_greeen_rounded"
                android:layout_height="@dimen/dp44">
            <ImageView
                android:id="@+id/imgPayment"
                android:layout_width="30dp"

                android:layout_height="@dimen/dp30"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_add_customer" /></RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/add_customerbg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Add Customer"
                    android:textColor="#333333"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Lorum ipsume donet lo"
                    android:visibility="gone"
                    android:textColor="#666666"
                    android:textSize="14sp" />

            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/crmcardviewcustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:id="@+id/lytHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="15dp">

            <RelativeLayout
                android:id="@+id/rel_history"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:gravity="center"
                android:background="@drawable/ic_skyblue_rounded">

                <ImageView
                    android:id="@+id/imgHistory"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_view_customer" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/rel_history"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="View Customer"
                    android:textColor="#333333"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Lorum ipsume donet lo"
                    android:visibility="gone"
                    android:textColor="#666666"
                    android:textSize="14sp" />

            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>