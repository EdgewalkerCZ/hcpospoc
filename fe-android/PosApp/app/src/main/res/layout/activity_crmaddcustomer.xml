<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_right_medium"
            android:layout_marginLeft="@dimen/margin_left_medium"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_xlarge">
                <EditText
                    android:id="@+id/crm_add_customer_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:hint="@string/add_customer_first_name"
                    android:inputType="textCapSentences"
                    android:imeOptions="actionNext"
                    android:scrollbars="vertical"
                    android:maxLines="1"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_xlarge">
                <EditText
                    android:id="@+id/crm_add_customer_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:scrollbars="vertical"
                    android:textSize="16sp"
                    android:hint="@string/add_customer_last_name"
                    android:inputType="textCapSentences"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_xlarge">
                <EditText
                    android:id="@+id/crm_add_customer_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/add_customer_phone"
                    android:textSize="16sp"
                    android:inputType="phone"
                    android:scrollbars="vertical"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_xlarge">
                <EditText
                    android:id="@+id/crm_add_customer_email"
                    android:layout_width="match_parent"
                    android:inputType="textEmailAddress"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:hint="@string/add_customer_email"
                    android:imeOptions="actionNext"
                    android:scrollbars="vertical"
                    android:maxLines="1"
                    />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_xlarge">
                <EditText
                    android:id="@+id/crm_add_customer_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/add_customer_address"
                    android:inputType="textPostalAddress"
                    android:scrollbars="vertical"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/crm_add_customer_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:hint="@string/add_customer_dob"
                    android:maxLines="1"
                    android:visibility="gone"
                    android:textSize="16sp"
                    android:padding="@dimen/dp20" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_xlarge">
                <EditText
                    android:id="@+id/crm_add_customer_note"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:layout_height="wrap_content"
                    android:hint="@string/add_customer_note"
                    android:scrollbars="vertical"
                    android:textSize="16sp"
                    android:inputType="textCapSentences"
                    android:imeOptions="actionDone"
                    />
            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/crm_add_customer_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/margin_top_xlarge"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:background="@drawable/round_corner_rectangle_fill"
                android:text="@string/add_customer"
                android:textColor="@color/white_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>