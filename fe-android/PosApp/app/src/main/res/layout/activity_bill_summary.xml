<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_invoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_invoice_3_inch"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/print_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_invoice"
            android:text="@string/text_print_preview"
            android:textColor="@color/black_color"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_merchant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/print_preview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="Store Name"
            android:textColor="@color/black_color"
            android:textSize="16dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_merchant_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_merchant_name"
            android:layout_centerHorizontal="true"
            android:text="Address and Details"
            android:textColor="@color/black_color"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_supply_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_merchant_details"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Supply of Goods"
            android:textColor="@color/black_color"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_invoice_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_supply_heading"
            android:layout_marginTop="20dp"
            android:text="Invoice No - 01df0339f"
            android:textColor="@color/black_color"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_invoice_number"
            android:layout_marginTop="5dp"
            android:text="Date - 29 Aug, 2018 20:17"
            android:textColor="@color/black_color"
            android:textSize="16dp" />

        <View
            android:id="@+id/upper_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_date"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/black_color" />

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/upper_divider"
            android:text="@string/text_item_name"
            android:textColor="@color/black_color"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_item_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/upper_divider"
            android:text="@string/text_total"
            android:textColor="@color/black_color"
            android:textSize="16dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_item_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/upper_divider"
            android:layout_marginRight="45dp"
            android:layout_toLeftOf="@+id/tv_item_total"
            android:text="@string/text_qty"
            android:textColor="@color/black_color"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/upper_divider"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/tv_item_qty"
            android:text="@string/text_price"
            android:textColor="@color/black_color"
            android:textSize="16dp"
            android:textStyle="bold" />

        <View
            android:id="@+id/lower_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_item_name"
            android:layout_marginTop="5dp"
            android:background="@color/black_color" />


        <TextView
            android:id="@+id/tv_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lower_divider"
            android:layout_marginTop="8dp"
            android:text="@string/text_item_name"
            android:textColor="@color/black_color"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_detail_title_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/lower_divider"
            android:layout_marginTop="8dp"
            android:text="100"
            android:textColor="@color/black_color"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_tax_sumary_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_detail_title_value"
            android:layout_marginTop="5dp"
            android:text="@string/text_tax_summary"
            android:textColor="@color/black_color"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_tax_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tax_sumary_title"
            android:text="@string/text_item_name"
            android:textColor="@color/black_color"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_tax_detail_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_tax_sumary_title"
            android:text="100"
            android:textColor="@color/black_color"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_netamount_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tax_detail_value"
            android:layout_marginTop="10dp"
            android:text="@string/text_net_amount"
            android:textColor="@color/black_color"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_netamount_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_tax_detail_value"
            android:layout_marginTop="10dp"
            android:text="100"
            android:textColor="@color/black_color"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_balance_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_netamount_title"
            android:layout_marginTop="15dp"
            android:text="@string/text_balance"
            android:textColor="@color/black_color"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_balance_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_netamount_value"
            android:layout_marginTop="15dp"
            android:text="100"
            android:textColor="@color/black_color"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_payment_sumary_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_balance_title"
            android:layout_marginTop="15dp"
            android:text="@string/text_payment_summmary"
            android:textColor="@color/black_color"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_cash_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_payment_sumary_title"
            android:text="@string/text_cash"
            android:textColor="@color/black_color"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_cash_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_payment_sumary_title"
            android:text="100"
            android:textColor="@color/black_color"
            android:textSize="16dp" />
    </RelativeLayout>

</ScrollView>