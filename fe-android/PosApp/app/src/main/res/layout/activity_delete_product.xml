<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ProgressBar

        android:id="@+id/pb_dialogue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorPrimaryDark"
        android:theme="@style/progressBarRed"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="@dimen/margin_bottom_medium">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_update"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/margin_top_large"
            android:fillViewport="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/rel_layout_gst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp">

                    <TextView
                        android:id="@+id/tv_product_tag"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/background_circle_blue"
                        android:gravity="center"
                        android:text="@string/dummy_tag_A"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/layout_horizontal_top"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_weight="3.5"
                        android:padding="@dimen/margin_left_medium"
                        android:orientation="vertical">

                        <LinearLayout

                            android:id="@+id/product_name_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_product_tag"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_product_name"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="left|center"
                                android:paddingBottom="@dimen/dp6"
                                android:paddingLeft="@dimen/dp6"
                                android:text="OPP F9"
                                android:textColor="@color/color_product_name"
                                android:textSize="@dimen/textsize_medium"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_pname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp3"
                                android:paddingLeft="@dimen/dp6"
                                android:gravity="left|center"
                                android:paddingBottom="@dimen/dp6"
                                android:text="oppo"
                                android:textColor="@color/color_configuration"
                                android:textSize="@dimen/sp12"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutConfig"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/product_name_container"
                            android:orientation="horizontal">


                            <View
                                android:layout_width="@dimen/dp1"
                                android:layout_height="@dimen/dp11"
                                android:layout_gravity="center"
                                android:background="@color/color_configuration"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tv_rsize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp3"
                                android:layout_marginRight="@dimen/dp3"
                                android:paddingBottom="@dimen/dp6"
                                android:text="4GB"
                                android:textColor="@color/color_configuration"
                                android:textSize="@dimen/sp12"
                                android:textStyle="bold"
                                android:visibility="gone" />

                            <View
                                android:layout_width="@dimen/dp1"
                                android:layout_height="@dimen/dp11"
                                android:layout_gravity="center"
                                android:background="@color/color_configuration"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tv_hsize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp3"
                                android:layout_marginRight="@dimen/dp3"
                                android:paddingBottom="@dimen/dp6"
                                android:text="32GB"
                                android:textColor="@color/color_configuration"
                                android:textSize="@dimen/sp12"
                                android:textStyle="bold"
                                android:visibility="gone" />

                            <View
                                android:layout_width="@dimen/dp1"
                                android:layout_height="@dimen/dp11"
                                android:layout_gravity="center"
                                android:background="@color/color_configuration"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tv_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp3"
                                android:layout_marginRight="@dimen/dp3"
                                android:paddingBottom="@dimen/dp6"
                                android:text="4GB"
                                android:textColor="@color/color_configuration"
                                android:textSize="@dimen/sp12"
                                android:textStyle="bold"
                                android:visibility="gone" />

                            <View
                                android:layout_width="@dimen/dp1"
                                android:layout_height="@dimen/dp11"
                                android:layout_gravity="center"
                                android:background="@color/color_configuration"
                                android:visibility="gone" />

                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="right|center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:paddingBottom="@dimen/dp6"
                            android:text="â‚¹4000"
                            android:textColor="@color/color_product_name"
                            android:textSize="@dimen/textsize_medium"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="@string/gst_text"
                            android:textColor="@color/color_configuration"
                            android:textSize="@dimen/sp12"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>


                <View
                    android:id="@+id/viewHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_below="@+id/rel_layout_gst"
                    android:layout_marginTop="@dimen/margin_top_normal"
                    android:background="@color/color_horizontal_view" />


                <RelativeLayout
                    android:id="@+id/rel_current_stock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewHorizontal"
                    android:layout_marginTop="@dimen/margin_top_normal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/current_stock"
                        android:textColor="@color/color_product_name"
                        android:textSize="@dimen/textsize_normal" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_stock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textColor="@color/color_product_name"
                            android:textSize="@dimen/textsize_normal"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp12"
                            android:text="@string/units"
                            android:textColor="@color/color_product_name"
                            android:textSize="@dimen/textsize_normal" />
                    </LinearLayout>

                </RelativeLayout>


                <View
                    android:id="@+id/viewHorizontal_stock"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_below="@+id/rel_current_stock"
                    android:layout_marginTop="@dimen/margin_top_normal"
                    android:background="@color/color_horizontal_view" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewHorizontal_stock"
                    android:layout_marginTop="@dimen/margin_top_normal">

                    <TextView
                        android:id="@+id/tv_remove_stock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/remove_stock"
                        android:textColor="@color/color_product_name"
                        android:textSize="@dimen/textsize_normal" />

                    <LinearLayout
                        android:id="@+id/remove_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_remove_stock"
                        android:layout_marginTop="@dimen/margin_top_normal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:gravity="end"
                                android:text="@string/store_recount"
                                android:textColor="@color/color_configuration"
                                android:textSize="@dimen/sp14" />

                            <LinearLayout
                                android:id="@+id/lytStore"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp27"
                                android:layout_weight="5"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btn_store_de"
                                    android:layout_width="@dimen/dp32"
                                    android:layout_height="@dimen/dp28"
                                    android:layout_weight="3"
                                    android:background="@color/light_green"
                                    android:clickable="false"
                                    android:gravity="center"
                                    android:text="@string/minus"
                                    android:textColor="@color/white_color"
                                    android:textSize="@dimen/sp18" />

                                <EditText
                                    android:id="@+id/edt_store"
                                    android:layout_width="@dimen/dp52"
                                    android:layout_height="@dimen/dp28"
                                    android:layout_weight="4"
                                    android:background="@drawable/editext_border"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:text="@string/zero" />

                                <Button
                                    android:id="@+id/btn_store_in"
                                    android:layout_width="@dimen/dp32"
                                    android:layout_height="@dimen/dp28"
                                    android:layout_weight="3"
                                    android:background="@color/color_add_button"
                                    android:gravity="center"
                                    android:text="+"
                                    android:textColor="@color/white_color"
                                    android:textSize="@dimen/sp18" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_top_normal"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:gravity="end"
                                android:text="@string/damage"
                                android:textColor="@color/color_configuration"
                                android:textSize="@dimen/sp14" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp27"
                                android:layout_weight="5"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btn_damage_de"
                                    android:layout_width="@dimen/dp32"
                                    android:layout_height="@dimen/dp28"
                                    android:layout_weight="3"
                                    android:background="@color/light_green"
                                    android:clickable="false"
                                    android:gravity="center"
                                    android:text="@string/minus"
                                    android:textColor="@color/white_color"
                                    android:textSize="@dimen/sp18" />

                                <EditText
                                    android:id="@+id/edt_damage"
                                    android:layout_width="@dimen/dp52"
                                    android:layout_height="@dimen/dp28"
                                    android:layout_weight="4"
                                    android:background="@drawable/editext_border"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:text="@string/zero" />

                                <Button
                                    android:id="@+id/btn_damage_in"
                                    android:layout_width="@dimen/dp32"
                                    android:layout_height="@dimen/dp28"
                                    android:layout_weight="3"
                                    android:background="@color/color_add_button"
                                    android:gravity="center"
                                    android:text="+"
                                    android:textColor="@color/white_color"
                                    android:textSize="@dimen/sp18" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_top_normal"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:gravity="end"
                                android:text="@string/theft"
                                android:textColor="@color/color_configuration"
                                android:textSize="@dimen/sp14" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp27"
                                android:layout_weight="5"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btn_theft_de"
                                    android:layout_width="@dimen/dp32"
                                    android:layout_height="@dimen/dp28"
                                    android:layout_weight="3"
                                    android:background="@color/light_green"
                                    android:clickable="false"
                                    android:gravity="center"
                                    android:text="@string/minus"
                                    android:textColor="@color/white_color"
                                    android:textSize="@dimen/sp18" />

                                <EditText
                                    android:id="@+id/edt_theft"
                                    android:layout_width="@dimen/dp52"
                                    android:layout_height="@dimen/dp28"
                                    android:layout_weight="4"
                                    android:background="@drawable/editext_border"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:text="@string/zero" />

                                <Button
                                    android:id="@+id/btn_theft_in"
                                    android:layout_width="@dimen/dp32"
                                    android:layout_height="@dimen/dp28"
                                    android:layout_weight="3"
                                    android:background="@color/color_add_button"
                                    android:text="+"
                                    android:textColor="@color/white_color"
                                    android:textSize="@dimen/sp13" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_top_normal"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:gravity="end"
                                android:text="@string/loss"
                                android:textColor="@color/color_configuration"
                                android:textSize="@dimen/sp14" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp27"
                                android:layout_weight="5"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btn_loss_de"
                                    android:layout_width="@dimen/dp32"
                                    android:layout_height="@dimen/dp28"
                                    android:layout_weight="3"
                                    android:background="@color/light_green"
                                    android:clickable="false"
                                    android:gravity="center"
                                    android:text="@string/minus"
                                    android:textColor="@color/white_color"
                                    android:textSize="@dimen/sp18" />

                                <EditText
                                    android:id="@+id/edt_loss"
                                    android:layout_width="@dimen/dp52"
                                    android:layout_height="@dimen/dp28"
                                    android:layout_weight="4"
                                    android:background="@drawable/editext_border"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:text="@string/zero" />

                                <Button
                                    android:id="@+id/btn_loss_in"
                                    android:layout_width="@dimen/dp32"
                                    android:layout_height="@dimen/dp28"
                                    android:layout_weight="3"
                                    android:background="@color/color_add_button"
                                    android:gravity="center"
                                    android:text="+"
                                    android:textColor="@color/white_color"
                                    android:textSize="@dimen/sp18" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_top_normal"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:gravity="end"
                                android:text="@string/restock_return"
                                android:textColor="@color/color_configuration"
                                android:textSize="@dimen/sp14" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp27"
                                android:layout_weight="5"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btn_restock_de"
                                    android:layout_width="@dimen/dp32"
                                    android:layout_height="@dimen/dp28"
                                    android:layout_weight="3"
                                    android:background="@color/light_green"
                                    android:clickable="false"
                                    android:gravity="center"
                                    android:text="@string/minus"
                                    android:textColor="@color/white_color"
                                    android:textSize="@dimen/sp18" />

                                <EditText
                                    android:id="@+id/edt_restock"
                                    android:layout_width="@dimen/dp52"
                                    android:layout_height="@dimen/dp28"
                                    android:layout_weight="4"
                                    android:background="@drawable/editext_border"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:text="@string/zero" />

                                <Button
                                    android:id="@+id/btn_restock_in"
                                    android:layout_width="@dimen/dp32"
                                    android:layout_height="@dimen/dp28"
                                    android:layout_weight="3"
                                    android:background="@color/color_add_button"
                                    android:gravity="center"
                                    android:text="+"
                                    android:textColor="@color/white_color"
                                    android:textSize="@dimen/sp18" />
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:id="@+id/viewHorizontal_stock_return"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:layout_below="@+id/remove_layout"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_top_normal"
                        android:background="@color/color_horizontal_view" />

                    <LinearLayout
                        android:id="@+id/layout_reduce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/viewHorizontal_stock_return"
                        android:layout_marginTop="@dimen/margin_top_normal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:gravity="end"
                            android:text="Reduced(Less)   "
                            android:textColor="@color/color_configuration"
                            android:textSize="@dimen/sp14"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/tv_reduce_count"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp10"
                            android:text="0"

                            android:textColor="@color/color_configuration"
                            android:textSize="@dimen/sp16" />
                    </LinearLayout>

                    <View
                        android:id="@+id/viewHorizontal_reduce"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:layout_below="@+id/layout_reduce"
                        android:layout_marginTop="@dimen/margin_top_normal"
                        android:background="@color/color_horizontal_view" />

                    <RelativeLayout
                        android:id="@+id/rel_updated_stock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/viewHorizontal_reduce"
                        android:layout_marginTop="@dimen/margin_top_normal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/updated_stock"
                            android:textColor="@color/color_product_name"
                            android:textSize="@dimen/textsize_normal" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_updated_stock"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10"
                                android:textColor="@color/color_product_name"
                                android:textSize="@dimen/textsize_normal"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp12"
                                android:text="@string/units"
                                android:textColor="@color/color_product_name"
                                android:textSize="@dimen/textsize_normal" />
                        </LinearLayout>

                    </RelativeLayout>
                    <View
                        android:id="@+id/viewHorizontal_reduce_two"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:layout_below="@+id/rel_updated_stock"
                        android:layout_marginTop="@dimen/margin_top_normal"
                        android:background="@color/color_horizontal_view" />

                </RelativeLayout>

            </RelativeLayout>

        </ScrollView>

        <Button
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:background="@color/color_configuration"
            android:text="@string/update"
            android:textColor="@color/white_color"
            android:textSize="@dimen/sp16" />
    </RelativeLayout>

</FrameLayout>
